<div class="container w-1/2 mx-auto">

  {% assign products = collections['all'].products %}

  {% for product in products %}
   <div class="bg-gray-800 my-4 text-white p-4">
    <a href="{{product.url}}">{{product.title}}</a>
    <p>{{ product.price | money_without_trailing_zeros }}</p>
   </div>
  {% endfor %}
</div>


{% schema %}
{
  "name": "Hello World",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Hello World"
    }
  ]
}
{% endschema %}
